{
  "manifest_version": 2,
  
  "name": "WristRest",
  "version": "0.1",
  "description": "A timer that sits in Chrome and makes sure you take breaks from typing to try to prevent RSI",

  "browser_action": {
    "default_icon": "icons/wrist-tmp.png",
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "alarms"
  ],


  "background": {
    "scripts": ["assets/jquery-3.2.1.min.js", "eventHandlers.js"],
    "persistent": false
  }
}
